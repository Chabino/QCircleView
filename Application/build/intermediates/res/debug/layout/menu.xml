                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/sms"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/sms" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/camera"
                android:layout_row="1"
