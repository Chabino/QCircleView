<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="309dp"
    android:layout_height="307dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_gravity="center_horizontal"
    android:gravity="center">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/delete"
        android:layout_gravity="center_horizontal"
        android:background="#00fffefa" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="#ff040404"
        android:background="#3ffff9fb" />

    <ScrollView
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <TextView
            android:layout_width="265dp"
            android:layout_height="84dp"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:enabled="false"
            android:textColor="#ff030303"
            android:background="#3ffff9fb" />
    </ScrollView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="right"
        android:paddingLeft="20dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageView" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/previous"
            android:background="@drawable/previous_1" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/playpause"
            android:adjustViewBounds="false"
            android:background="@drawable/playpause_1" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/next"
            android:background="@drawable/next_1" />

    </TableRow>

    <ImageView
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:id="@+id/imageView3"
        android:layout_gravity="right" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/imageButton"
        android:background="@drawable/ic_sysbar_back_dark_normal" />

</LinearLayout><!-- From: file:/F:/QCircleView/Application/src/main/res/layout/pager_music.xml -->